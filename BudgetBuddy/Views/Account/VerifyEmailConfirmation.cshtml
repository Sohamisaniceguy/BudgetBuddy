@{
    ViewData["Title"] = "Email Confirmation";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        /* Add CSS to center the content */
        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="centered">
        <h1>Email Confirmation</h1>
        <p>
            Your email has been successfully verified. You can now log in to your Budget Buddy account.
        </p>

        <p>
            <a asp-action="Login" class="btn btn-primary">Log In</a>
        </p>

        <p>
            If you have any further questions or concerns, please don't hesitate to contact our support team.
        </p>

        <p>
            Thank you,
            <br>
            The Budget Buddy Team
        </p>

    </div>

</body>
</html>
