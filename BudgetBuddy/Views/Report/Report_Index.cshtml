@{
    ViewData["Title"] = "Reports";
}

<h2>@ViewData["Title"]</h2>
<h2>Hi there! Looking for reports?</h2>

<div>
    <canvas id="myChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Json.Serialize(((IEnumerable<Transaction>)Model).Select(t => t.Date).ToList()),

            datasets: [{
                label: '# of Votes',
                data: @Json.Serialize(((IEnumerable<Transaction>)Model).Select(t => t.Amount).ToList()),

                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
